<%- include("template/cabecera", {titulo: "pobrecitos perros y gatos" }) %>

    <div class="container">

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Descripción</th>
                    <th scope="col">Acción</th>
                </tr>
            </thead>
            <tbody>

                <% if (arrayMascotas.length> 0) { %>
                    <% arrayMascotas.forEach(mascotita=> { %>
                        <tr>
                            <th scope="row"><%= mascotita.id %> </th>
                            <td><%= mascotita.nombre %></td>
                            <td><%= mascotita.descripcion %></td>
                            <td>@mdo</td>
                        </tr>
                    <% }) %>
                <% } %>

                
            </tbody>
        </table>


    </div>

    <%- include("template/footer") %>