<%- include("template/cabecera", {titulo: "pobrecitos perros y gatos" }) %>

    <div class="container">
        <h1>Corral</h1>
        <a
            class="btn btn-primary btn-block my-4"
            href="/mascotas/crear"
        >
            Cree su mascota
        </a>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Descripción</th>
                    <th scope="col">Acción</th>
                </tr>
            </thead>
            <tbody>

                <% if (arrayMascotas.length> 0) { %>
                    <% arrayMascotas.forEach(mascotita=> { %>
                        <tr>
                            <th scope="row"><%= mascotita.id %> </th>
                            <td><%= mascotita.nombre %></td>
                            <td><%= mascotita.descripcion %></td>
                            <td>
                                <a
                                    href="mascotas/<%= mascotita.id  %> "
                                    class="btn btn-warning btn-sm"
                                >
                                    Editar
                                </a>
                            </td>
                        </tr>
                    <% }) %>
                <% } %>

                
            </tbody>
        </table>


    </div>

    <%- include("template/footer") %>